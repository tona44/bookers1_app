<!--削除成功メッセージ-->
<%= notice %>

<!--投稿一覧-->
<h1>Books</h1>

<table>
  
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>  <!--Show,Edit,Destroy部分を水平方向に結合-->
    </tr>
  </thead>

<tbody>
  <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to "Show",book_path(book.id) %></td>
      <td><%= link_to "Edit",edit_book_path(book.id) %></td>
      <td><%= link_to "Destroy",book_path(book.id),method: :delete,"data-confirm" => "Are you sure?" %></td>
    </tr>
  <% end %>
</tbody>

</table>



<!--新規投稿フォーム-->
<h2>New book</h2>

<%= form_with model:@book,local:true do |f| %>
 <h4>Title</h4>
  <%= f.text_field :title %>

 <h4>Body</h4>
  <%= f.text_area :body %>
  <br>
  <%= f.submit "Create Book" %>

<% end %>
